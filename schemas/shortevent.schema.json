{
  "$defs": {
    "Cat": {
      "anyOf": [
        {
          "$ref": "#/$defs/CatEnum"
        },
        {
          "pattern": "^n_c:[0-9]+$",
          "type": "string"
        }
      ],
      "title": "Cat"
    },
    "CatAge": {
      "enum": [
        "newborn",
        "kitten",
        "adolescent",
        "young adult",
        "adult",
        "senior adult",
        "senior"
      ],
      "title": "CatAge",
      "type": "string"
    },
    "CatEnum": {
      "enum": [
        "m_c",
        "r_c"
      ],
      "title": "CatEnum",
      "type": "string"
    },
    "EventSubtype": {
      "enum": [
        "war",
        "murder",
        "old_age",
        "mass_death",
        "murder_reveal",
        "hidden_murder_reveal",
        "failed_murder",
        "accessory",
        "ceremony",
        "transition",
        "mediator"
      ],
      "title": "EventSubtype",
      "type": "string"
    },
    "EventTrigger": {
      "enum": [
        "always",
        "low",
        "adequate",
        "full",
        "excess"
      ],
      "title": "EventTrigger",
      "type": "string"
    },
    "HistoryText": {
      "properties": {
        "cats": {
          "description": "List of cats for whom the history will be assigned.",
          "items": {
            "$ref": "#/$defs/Cat"
          },
          "title": "Cats",
          "type": "array"
        },
        "reg_death": {
          "description": "Death history text for non-leaders. Whole sentence. Must be included if the cat is dead or injured.",
          "title": "Reg Death",
          "type": "string"
        },
        "lead_death": {
          "description": "Death history text for leaders. Sentence fragment. Must be included if the dead or injured cat could be the leader.",
          "title": "Lead Death",
          "type": "string"
        },
        "scar": {
          "description": "Scar history. Whole sentence. Must be included if cat gets injured.",
          "title": "Scar",
          "type": "string"
        }
      },
      "title": "HistoryText",
      "type": "object"
    },
    "InjuryItem": {
      "properties": {
        "cats": {
          "description": "Which cats are injured.",
          "items": {
            "$ref": "#/$defs/Cat"
          },
          "title": "Cats",
          "type": "array"
        },
        "injuries": {
          "description": "Pool of injuries to draw from.",
          "items": {
            "$ref": "common.schema.json#/$defs/Injury"
          },
          "title": "Injuries",
          "type": "array"
        },
        "scars": {
          "description": "Pool of scars to draw from. If in classic mode, a scar is chosen from this pool to be given instead of an injury. If in expanded mode, a scar is chosen from this pool to possibly be given upon healing their injury.",
          "items": {
            "$ref": "common.schema.json#/$defs/Scar"
          },
          "title": "Scars",
          "type": "array"
        }
      },
      "title": "InjuryItem",
      "type": "object"
    },
    "MC": {
      "properties": {
        "age": {
          "description": "List of ages m_c can be. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatAge"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Age",
          "type": "array"
        },
        "status": {
          "description": "List of statuses m_c can be. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "common.schema.json#/$defs/Status"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Status",
          "type": "array"
        },
        "relationship_status": {
          "description": "Dictates what relationships m_c must have towards r_c. Do not use this section if there is no r_c in the event.",
          "items": {
            "$ref": "common.schema.json#/$defs/RelationshipStatus"
          },
          "title": "Relationship Status",
          "type": "array"
        },
        "skill": {
          "description": "m_c must possess at least one skill from this list. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "common.schema.json#/$defs/Skill"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Skill",
          "type": "array"
        },
        "not_skill": {
          "description": "m_c cannot possess any of the skills on this list.",
          "items": {
            "$ref": "common.schema.json#/$defs/Skill"
          },
          "title": "Not Skill",
          "type": "array"
        },
        "trait": {
          "description": "m_c must possess at least one trait from this list. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "common.schema.json#/$defs/AllTrait"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Trait",
          "type": "array"
        },
        "not_trait": {
          "description": "m_c cannot possess any of the traits on this list.",
          "items": {
            "$ref": "common.schema.json#/$defs/AllTrait"
          },
          "title": "Not Trait",
          "type": "array"
        },
        "backstory": {
          "description": "m_c must possess a backstory from this list.",
          "items": {
            "$ref": "common.schema.json#/$defs/Backstory"
          },
          "title": "Backstory",
          "type": "array"
        },
        "dies": {
          "description": "m_c will die due to this event. Default is False.",
          "title": "Dies",
          "type": "boolean"
        }
      },
      "title": "MC",
      "type": "object"
    },
    "OtherClan": {
      "properties": {
        "current_rep": {
          "description": "The reputation the Clan must have in order for this event to be possible.",
          "items": {
            "$ref": "#/$defs/OtherClanRep"
          },
          "title": "Current Rep",
          "type": "array"
        },
        "changed": {
          "description": "How the reputation of the Clan changes as a result of this event",
          "title": "Changed",
          "type": "integer"
        }
      },
      "title": "OtherClan",
      "type": "object"
    },
    "OtherClanRep": {
      "enum": [
        "hostile",
        "neutral",
        "ally",
        "any"
      ],
      "title": "OtherClanRep",
      "type": "string"
    },
    "Outsider": {
      "properties": {
        "current_rep": {
          "description": "The reputation the Clan must have in order for this event to be possible.",
          "items": {
            "$ref": "#/$defs/OutsiderRep"
          },
          "title": "Current Rep",
          "type": "array"
        },
        "changed": {
          "description": "How the reputation of the Clan changes as a result of this event",
          "title": "Changed",
          "type": "integer"
        }
      },
      "title": "Outsider",
      "type": "object"
    },
    "OutsiderRep": {
      "enum": [
        "hostile",
        "neutral",
        "welcoming",
        "any"
      ],
      "title": "OutsiderRep",
      "type": "string"
    },
    "RC": {
      "properties": {
        "age": {
          "description": "List of ages r_c can be. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatAge"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Age",
          "type": "array"
        },
        "status": {
          "description": "List of statuses r_c can be. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "common.schema.json#/$defs/Status"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Status",
          "type": "array"
        },
        "relationship_status": {
          "description": "Dictates what relationships r_c must have towards m_c.",
          "items": {
            "$ref": "#/$defs/RcRelationshipStatus"
          },
          "title": "Relationship Status",
          "type": "array"
        },
        "skill": {
          "description": "r_c must possess at least one skill from this list. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "common.schema.json#/$defs/Skill"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Skill",
          "type": "array"
        },
        "not_skill": {
          "description": "r_c cannot possess any of the skills on this list.",
          "items": {
            "$ref": "common.schema.json#/$defs/Skill"
          },
          "title": "Not Skill",
          "type": "array"
        },
        "trait": {
          "description": "r_c must possess at least one trait from this list. If they can be anything, use \"any\".",
          "items": {
            "anyOf": [
              {
                "$ref": "common.schema.json#/$defs/AllTrait"
              },
              {
                "const": "any",
                "type": "string"
              }
            ]
          },
          "title": "Trait",
          "type": "array"
        },
        "not_trait": {
          "description": "r_c cannot possess any of the traits on this list.",
          "items": {
            "$ref": "common.schema.json#/$defs/AllTrait"
          },
          "title": "Not Trait",
          "type": "array"
        },
        "backstory": {
          "description": "r_c must possess a backstory from this list.",
          "items": {
            "$ref": "common.schema.json#/$defs/Backstory"
          },
          "title": "Backstory",
          "type": "array"
        },
        "dies": {
          "description": "r_c will die due to this event. Default is False.",
          "title": "Dies",
          "type": "boolean"
        }
      },
      "title": "RC",
      "type": "object"
    },
    "RcRelationshipStatus": {
      "enum": [
        "fancies",
        "adores",
        "loves",
        "loathes",
        "hates",
        "dislikes",
        "knows_of",
        "likes",
        "enjoys",
        "cherishes",
        "resents",
        "envies",
        "begrudges",
        "acknowledges",
        "praises",
        "respects",
        "admires",
        "discredits",
        "distrusts",
        "doubts",
        "observes",
        "listens_to",
        "trusts",
        "confides_in",
        "runs_from",
        "fears",
        "avoids",
        "considers",
        "relates_to",
        "understands",
        "knows_deeply",
        "fancies_only",
        "adores_only",
        "delights_in_only",
        "abhors_only",
        "hates_only",
        "dislikes_only",
        "knows_of_only",
        "likes_only",
        "enjoys_only",
        "loves_only",
        "resents_only",
        "envies_only",
        "begrudges_only",
        "acknowledges_only",
        "praises_only",
        "respects_only",
        "admires_only",
        "discredits_only",
        "distrusts_only",
        "doubts_only",
        "observes_only",
        "listens_to_only",
        "trusts_only",
        "confides_in_only",
        "runs_from_only",
        "fears_only",
        "avoids_only",
        "considers_only",
        "seeks_out_only",
        "prefers_only",
        "relies_on_only"
      ],
      "title": "RcRelationshipStatus",
      "type": "string"
    },
    "ShortEventSchemaItem": {
      "properties": {
        "event_id": {
          "description": "Unique string used to identify the event.",
          "title": "Event Id",
          "type": "string"
        },
        "location": {
          "description": "Controls the biome and camp the event appears in.",
          "items": {
            "type": "string"
          },
          "title": "Location",
          "type": "array"
        },
        "season": {
          "description": "List of seasons in which the event may occur.",
          "items": {
            "$ref": "common.schema.json#/$defs/Season"
          },
          "title": "Season",
          "type": "array"
        },
        "sub_type": {
          "description": "List of sub_types for this event.",
          "items": {
            "$ref": "#/$defs/EventSubtype"
          },
          "title": "Sub Type",
          "type": "array"
        },
        "tags": {
          "description": "Used for some filtering purposes",
          "items": {
            "$ref": "#/$defs/Tag"
          },
          "title": "Tags",
          "type": "array"
        },
        "frequency": {
          "description": "Controls how common an event is. 4 == Common, 3 == Uncommon, 2 == Rare, 3 == Very Rare. Consider this in the terms of 'If an event of this type happened every moon for 10 moons, on how many of those moons should this sort of event appear?'",
          "title": "Frequency",
          "type": "integer"
        },
        "event_text": {
          "description": "Text that appears within the event list when the event occurs.",
          "title": "Event Text",
          "type": "string"
        },
        "new_accessory": {
          "description": "If the event gives a new accessory, list possible new accessories here (one will be chosen from the list)",
          "items": {
            "type": "string"
          },
          "title": "New Accessory",
          "type": "array"
        },
        "m_c": {
          "$ref": "#/$defs/MC",
          "description": "Specifies the requirements for the main cat (m_c) of the event.",
          "title": "M C"
        },
        "r_c": {
          "$ref": "#/$defs/RC",
          "description": "Specifies the requirements for the random cat (r_c) of the event.",
          "title": "R C"
        },
        "new_cat": {
          "description": "Adds a new cat.",
          "items": {
            "$ref": "common.schema.json#/$defs/NewCat"
          },
          "title": "New Cat",
          "type": "array"
        },
        "injury": {
          "items": {
            "$ref": "#/$defs/InjuryItem"
          },
          "title": "Injury",
          "type": "array"
        },
        "history_text": {
          "$ref": "#/$defs/HistoryText",
          "title": "History Text"
        },
        "outsider": {
          "$ref": "#/$defs/Outsider",
          "description": "Dictates what reputation the clan is required to have with outsiders as well as how that reputation changes due to the event."
        },
        "other_clan": {
          "$ref": "#/$defs/OtherClan",
          "description": "Dictates what reputation the clan is required to have with the other clan as well as how that reputation changes due to the event.",
          "title": "Other Clan"
        },
        "supplies": {
          "items": {
            "$ref": "#/$defs/Supply"
          },
          "title": "Supplies",
          "type": "array"
        }
      },
      "title": "ShortEventSchemaItem",
      "type": "object"
    },
    "Supply": {
      "properties": {
        "type": {
          "anyOf": [
            {
              "$ref": "common.schema.json#/$defs/Herb"
            },
            {
              "$ref": "#/$defs/SupplyType"
            }
          ],
          "description": "Indicates the supply being affected.",
          "title": "Type"
        },
        "trigger": {
          "description": "Indicates when the event can trigger. Must include all possible trigger times.",
          "items": {
            "$ref": "#/$defs/EventTrigger"
          },
          "title": "Trigger",
          "type": "array"
        },
        "adjust": {
          "$ref": "#/$defs/SupplyAdjust",
          "description": "Indicates how the supply should be adjusted.",
          "title": "Adjust"
        }
      },
      "title": "Supply",
      "type": "object"
    },
    "SupplyAdjust": {
      "anyOf": [
        {
          "$ref": "#/$defs/SupplyAdjustEnum"
        },
        {
          "pattern": "^increase_[0-9]+$",
          "type": "string"
        }
      ],
      "title": "SupplyAdjust"
    },
    "SupplyAdjustEnum": {
      "enum": [
        "reduce_eighth",
        "reduce_quarter",
        "reduce_half",
        "reduce_full",
        ""
      ],
      "title": "SupplyAdjustEnum",
      "type": "string"
    },
    "SupplyType": {
      "enum": [
        "freshkill",
        "all_herb",
        "any_herb"
      ],
      "title": "SupplyType",
      "type": "string"
    },
    "Tag": {
      "anyOf": [
        {
          "$ref": "#/$defs/TagEnum"
        },
        {
          "pattern": "^clan:(.+)$",
          "type": "string"
        }
      ],
      "title": "Tag"
    },
    "TagEnum": {
      "enum": [
        "classic",
        "cruel_season",
        "no_body",
        "skill_trait_required",
        "clan_wide",
        "all_lives",
        "some_lives",
        "lives_remain",
        "high_lives",
        "mid_lives",
        "low_lives",
        "clan:apps",
        "lost",
        "kit_manipulated",
        "romance",
        "adoption"
      ],
      "title": "TagEnum",
      "type": "string"
    }
  },
  "description": "Short moonskip events in Clan Generator.",
  "items": {
    "$ref": "#/$defs/ShortEventSchemaItem"
  },
  "title": "ShortEventSchema",
  "type": "array"
}